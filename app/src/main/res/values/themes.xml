<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tugas_Pertemuan9" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">#525BFF</item>
    </style>
    <style name="FragmentTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Tugas_Pertemuan9" parent="Base.Theme.Tugas_Pertemuan9" />

    <style name="customActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/birucoy</item>
        <item name="titleTextStyle">@style/customActionBarTitle</item>
    </style>

    <style name="Tugas_Pertemuan9" parent="Base.Theme.Tugas_Pertemuan9">
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="title">TravelApp</item>
    </style>

</resources>